/* 引入main的样式 */
@import "../main/main.wxss";
.tip{
  padding-left: 20px;
  font-size: 18px;
}

.search {
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  font-size: 14px;
  margin-bottom: 300rpx;
}

.search input {
  width: 70%;
  /* 中间用空格隔开,而不是逗号 */
  border: 1px solid #ccc;
  box-shadow: inset 0 0 10px #ccc;
  color: black;
  background-color: white;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 18px;
}

.search button {
  height: 88rpx;
  width: 24%;
  line-height: 88rpx;
  margin-left: 10px;
  border-left: 0px;
  background-color: #dd5e0e;
  color: white;
  text-shadow: black 0 1px 0;
  text-align: center;
}
